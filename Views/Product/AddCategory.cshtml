@model AddCategoryViewModel 




<h4>Add Category</h4>

<div class="container">
    <form method="post" asp-action="AddCategory" asp-controller="Product" class="mt-3">
        <div class="form-group row">
            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CategoryId" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CategoryName" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>